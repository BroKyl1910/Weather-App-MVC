@{
    ViewBag.Title = "Login";
}

<div id="login">
    <div class="rounded-container">
        <h1>Weather Forecast App</h1>
        <div class="row">
            <div class="col-lg-6 col-sm-12" id="left-side">
                <p class="lead">Online counterpart to desktop app. View stored and real-time forecasts for your favourite cities, or any other city around the world!</p>
            </div>
            <div class="col-lg-6 col-sm-12">
                @if (Session["Username"] == null)
                {
                    <h1>Log In</h1>
                    using (Html.BeginForm())
                    {
                        <span style="color:red">@ViewBag.Error</span>
                        <div class="form-group">
                            <label class="control-label">Username</label>
                            <input type="text" name="username" value="" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Password</label>
                            <input type="password" name="password" value="" class="form-control" />
                        </div>

                        <input type="submit" class="btn btn-primary" value="Log In" />
                        <br />
                        <br />
                        @Html.ActionLink("Not a user? Register now!", "Register", "DB_User", null, new { @class = "text-white" })

                    }
                }
                else
                {
                    <p class="lead">You are logged in as @Session["Username"]! What are you waiting for? Go check out our awesome features!!</p>
                }

            </div>
        </div>

    </div>
</div>

